    read vpnportgc
    if [[ $vpnportgc == "2" ]]
        then
		echo -e "\033[32m不开启440端口共存\033[0m"
        else
		echo -e "\033[32m开启440端口共存\033[0m"
		vpnportgc=1
    fi
    echo 
